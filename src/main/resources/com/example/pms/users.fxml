<BorderPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../../../style/lab.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pms.UsersController">
    <left>
        <VBox prefHeight="602.0" prefWidth="306.0" spacing="15.0" style="-fx-border-color: #382348; -fx-border-radius: 30; -fx-border-width: 3; -fx-background-color: linear-gradient(from 90.5303% 89.3939% to 99.6212% 13.6364%, #ffffff 0.0%, #ff9900 80.0%, #000000 100.0%); -fx-background-radius: 30; -fx-effect: dropshadow( gaussian , rgba(0,0,0,0.7) , 10, 0.0 , 0 , 2 );" stylesheets="@../../../style/newsfeed.css" BorderPane.alignment="CENTER">
            <children>
                <Label text="Add New User" textFill="WHITE">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="20.0" top="30.0" />
                    </VBox.margin>
                </Label>
                <TextField fx:id="id" prefHeight="30.0" prefWidth="246.0" promptText="ID">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" top="25.0" />
                    </VBox.margin></TextField>
                <TextField fx:id="name" prefHeight="30.0" prefWidth="246.0" promptText="Name">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin></TextField>
                <ComboBox fx:id="cbRole" prefHeight="30.0" prefWidth="239.0" promptText="Select Role" styleClass="comboBox">
                    <VBox.margin>
                        <Insets left="25.0" />
                    </VBox.margin>
                </ComboBox>
                <TextField fx:id="course" prefHeight="30.0" prefWidth="246.0" promptText="Course">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin></TextField>
            <TextField fx:id="email" prefHeight="30.0" prefWidth="246.0" promptText="Email">
               <VBox.margin>
                  <Insets left="25.0" right="25.0" />
               </VBox.margin>
            </TextField>
                <PasswordField fx:id="password" prefHeight="30.0" prefWidth="246.0" promptText="Password">
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin>
                </PasswordField>
                <HBox prefHeight="39.0" prefWidth="180.0" spacing="10.0">
                    <children>
                        <Button fx:id="reset" mnemonicParsing="false" prefHeight="38.0" prefWidth="75.0" style="-fx-background-color: white;" text="Reset">
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
                            </effect>
                        </Button>
<!--                        onAction="#saveUser"-->
                        <Button fx:id="saveUser" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="38.0" prefWidth="75.0" text="Save" textFill="WHITE">
                            <font>
                                <Font size="15.0" />
                            </font>
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" color="#6468b2" />
                            </effect>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets left="110.0" top="25.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
            <BorderPane.margin>
                <Insets bottom="10.0" left="5.0" top="10.0" />
            </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <VBox alignment="TOP_RIGHT" prefHeight="571.0" prefWidth="692.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="TOP_RIGHT" prefHeight="41.0" prefWidth="640.0" />
                <TableView fx:id="userTable" prefHeight="349.0" prefWidth="678.0" style="-fx-effect: dropshadow( gaussian , rgba(0,0,0,0.7) , 10, 0.0 , 0 , 2 );" tableMenuButtonVisible="true">
                    <columns>
                        <TableColumn fx:id="colUserId" maxWidth="700.0" prefWidth="20.0" text="SL." />
                        <TableColumn fx:id="colId" maxWidth="4000.0" prefWidth="75.0" text="ID" />
                        <TableColumn fx:id="colname" maxWidth="4000.0" prefWidth="75.0" text="Name" />
                        <TableColumn fx:id="colRole" maxWidth="4000.0" prefWidth="75.0" text="Role" />
                        <TableColumn fx:id="colGender" maxWidth="4000.0" prefWidth="60.0" text="Course" />
                        <TableColumn fx:id="colEmail" maxWidth="6000.0" prefWidth="130.0" text="Email" />
                        <TableColumn fx:id="colEdit" maxWidth="3500.0" prefWidth="75.0" text="Edit" />
                    </columns>
                    <VBox.margin>
                        <Insets left="10.0" right="5.0" />
                    </VBox.margin>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <contextMenu>
                        <ContextMenu>
                            <items>
<!--                                onAction="#deleteUsers"-->
                                <MenuItem fx:id="deleteUsers" mnemonicParsing="false" text="Delete" />
                            </items>
                        </ContextMenu>
                    </contextMenu>
                </TableView>
            </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
        </VBox>
    </center>
   <top>
      <AnchorPane cacheShape="false" prefHeight="58.0" prefWidth="1315.0" styleClass="logo-container" stylesheets="@../../../style/newsfeed.css" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="56.0" fitWidth="177.0" layoutX="1.0" layoutY="3.0" nodeOrientation="INHERIT" pickOnBounds="true" styleClass="logo">
               <image>
                  <Image url="@../../../img/logo.png" />
               </image>
               <effect>
                  <Blend />
               </effect>
            </ImageView>
            <Pane layoutX="776.0" prefHeight="62.0" prefWidth="136.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <Button alignment="CENTER" contentDisplay="CENTER" layoutX="9.0" layoutY="13.0" mnemonicParsing="false" onAction="#newsfeed" prefHeight="38.0" prefWidth="118.0" stylesheets="@../../../style/newsfeed.css" text="Back">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <styleClass>
                        <String fx:value="navbar-button" />
                        <String fx:value="navbar-button:hover" />
                     </styleClass>
                     <textFill>
                        <LinearGradient endX="0.15909090863935876" endY="0.6666666775038748" startX="0.17045454093904205" startY="0.06060600280761719">
                           <stops>
                              <Stop>
                                 <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                 </color>
                              </Stop>
                              <Stop offset="1.0">
                                 <color>
                                    <Color />
                                 </color>
                              </Stop>
                           </stops>
                        </LinearGradient>
                     </textFill>
                  </Button>
               </children>
            </Pane>
         </children>
      </AnchorPane>
   </top>
</BorderPane>
